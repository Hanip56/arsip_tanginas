generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum Satuan {
  UNIT
  METER
}

enum jenisLahan {
  LSD
  BUKAN_LSD
}

enum Status {
  TERBANGUN
  TIDAK_TERBANGUN
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String      @unique
  password  String
  role      UserRole    @default(USER)
  hidden    Boolean     @default(false)
  Prasarana Prasarana[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PrasaranaKategori {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  nama     String
  imageUrl String?
}

model Prasarana {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  user           User       @relation(fields: [userId], references: [id])
  userId         String     @db.ObjectId
  nama           String
  poktan         String
  alamat         String
  desa           String
  kecamatan      String
  nilaiAnggaran  Int
  tahun          String
  sumberAnggaran String
  volume         String
  satuan         Satuan
  status         Status
  jenisLahan     jenisLahan
  longitude      String
  latitude       String
  bpp            String
  Arsip          Arsip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ArsipKategori {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  nama     String
  imageUrl String?
  Arsip    Arsip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Arsip {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  prasarana       Prasarana     @relation(fields: [prasaranaId], references: [id])
  prasaranaId     String        @db.ObjectId
  arsipKategori   ArsipKategori @relation(fields: [arsipKategoriId], references: [id])
  arsipKategoriId String        @db.ObjectId
  filename        String
  filepath        String
  filetype        String
  filesize        Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
